<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currency.GalleryFragment">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ComputeActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:text="What type of calculation do you \n want to perform ?"
                tools:layout_editor_absoluteX="40dp"

                tools:layout_editor_absoluteY="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="296dp"
                android:layout_height="87dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="50dp">
                <RadioButton
                    android:id="@+id/Sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sum" />

                <RadioButton
                    android:id="@+id/Square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Square" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value 1"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="203dp" />

            <EditText
                android:id="@+id/value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginBottom="10dp"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value 2"

                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="320dp" />

            <EditText
                android:id="@+id/value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text=""
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="382dp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp">

            <Button
                android:id="@+id/calcul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="495dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result :"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="573dp" />

            <EditText
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text=""
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="555dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>